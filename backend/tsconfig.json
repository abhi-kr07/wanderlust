{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowArbitraryExtensions": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "server.ts",
    "app.ts",
    "controllers/**/*.ts",
    "models/**/*.ts",
    "services/**/*.ts",
    "utils/**/*.ts"
  ]
}

